<table class="table table-bordered">
  <thead>
    <tr>
      <th width="10%">商品id</th>
      <th >商品图片</th>
      <th width="10%">名称</th>
      <th width="10%">库存</th>
      <th width="10%">价格</th>
      <th width="10%">管理项</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.id %>
        </td>
        <td>
          <%= link_to product_path(product) do %>
            <% if product.image.present? %>
              <% image_tag(product.image.thumb.url, class:"thumbnail") %>
            <% end %>
          <% end %>
        </td>
        <td><%= product.title %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td>
          <%= link_to("编辑", edit_admin_product_path(product)) %>
          <%= link_to("删除", admin_product_path(product), method: :delete, data: {confirm:"是否删除"}) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
